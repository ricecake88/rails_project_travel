<%= render 'users/nav'%>

<%= form_for @leg do |f| %>
    <%= f.label :departure_city_id, "Departure City: "%><br/>
    <%= f.collection_select :departure_place_id, @places, :id, :city_name, {:selected => @leg.departure_place_id} %><br/>
    <%= f.label :arrival_city_id, "Arrival City:" %><br/>
    <%= f.collection_select :arrival_place_id, @places, :id, :city_name, {:selected => @leg.arrival_place_id} %><br/>
    <%= f.label :vacation_id, "Vacation:" %><br/>
    <%= f.collection_select :vacation_id, current_user.vacations, :id, :name, {:selected => @leg.vacation_id} %><br/>
    <%= f.submit "Submit Leg" %>
<% end %>