<!-- legs/new.html -->

<h2>Add a Leg</h2>

<%= form_for @leg do |f| %>
    <%= f.label :departure_id, "Departure City:" %> 
    <%= f.collection_select :departure_id, @destinations, :id, :city_name %><br/>

    <%= f.label :destination_id, "Destination:" %> 
    <%= f.collection_select :destination_id, @destinations, :id, :city_name %><br/>

    <%= f.label :leg_num, "Which Leg:" %> 
    <%= f.number_field :leg_num, min: 1, value: 1 %><br/>

    <%= f.label :vacation_id, "Vacation:" %> 
    <%= f.collection_select :vacation_id, current_user.vacations, :id, :name%><br/>
    <%= f.submit "Submit Leg" %>
<% end %>

<div class="mini-nav">
    <%= link_to "Cancel", vacations_path %>
</div>